{
  "name": "FunBox",
  "version": "0.1.0",
  "private": true,
  "description": "тестовое задание FunBox",
  "devDependencies": {
    "autoprefixer": "7.1.x",
    "grunt": "1.0.x",
    "grunt-browser-sync": "2.2.x",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-imagemin": "^2.0.1",
    "grunt-contrib-watch": "1.0.x",
    "grunt-cwebp": "^2.1.0",
    "grunt-minified": "0.0.6",
    "grunt-postcss": "0.9.x",
    "grunt-sass": "^2.0.0",
    "load-grunt-tasks": "^3.5.2",
    "node-sass": "^4.5.3",
    "stylelint": "8.1.x"
  },
  "scripts": {
    "stylelint": "stylelint 'sass/**/*.scss' --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "grunt sass && grunt postcss",
    "start": "npm run build && grunt serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.html",
    "*.json",
    "*.js",
    "js/**/*.js",
    "img/**/*.svg",
    "sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.9"
  }
}
